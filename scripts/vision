      BLACK='\033[0;39m'
      BLUE='\033[1;34m'
      GREEN='\033[1;32m'
      RED='\033[1;31m'
      GREY='\033[1;30m'
      
if [ ! -d /opt/Amiga/ ]; then
 
	     
	     sudo mkdir /opt/Amiga
	     chmod -R 777 /opt/Amiga
	     ln -s /opt/Amiga/ ~/Amiga
	     cd /opt/
             unzip -u  /opt/RetroPie_Rock5b/Amiga/Amiga.zip
